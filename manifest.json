{
    "name": "Instagram Dark Mode",
    "description": "Let instagram in darkmode",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://*.instagram.com/*"],
            "js": ["src/popup/popup.js"],
            "css": ["src/assets/main.css"]
        }
    ],
    "permissions": ["storage", "activeTab", "scripting", "tabs", "webRequest", "webNavigation"],
    "action": {
        "default_popup": "src/popup/popup.html",
        "default_icon": "src/assets/img/logo.png"
    },
    "host_permissions": ["https://www.instagram.com/*", "https://instagram.com/*"]
}
